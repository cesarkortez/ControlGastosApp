@model ControlGastosApp.Models.FondoMonetario

@{
    ViewData["Title"] = "Eliminar Fondo Monetario";
}

<h1>Eliminar Fondo Monetario</h1>

<h3>¿Está seguro que desea eliminar este fondo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SaldoActual)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SaldoActual)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>