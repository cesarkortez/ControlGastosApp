@model ControlGastosApp.Models.Gasto

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h5 class="fw-bold">Información del Documento</h5>
            <dl class="row">
                <dt class="col-sm-4">Fecha:</dt>
                <dd class="col-sm-8">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Documento:</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-secondary">@Model.TipoDocumento</span>
                    @Model.NumeroDocumento
                </dd>

                <dt class="col-sm-4">Comercio:</dt>
                <dd class="col-sm-8">@Model.Comercio</dd>

                <dt class="col-sm-4">Fondo Monetario:</dt>
                <dd class="col-sm-8">@Model.FondoMonetario?.Nombre</dd>

                <dt class="col-sm-4">Observaciones:</dt>
                <dd class="col-sm-8">@(Model.Observaciones ?? "Ninguna")</dd>
            </dl>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Resumen</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="fw-bold">Total:</span>
                        <span class="fw-bold text-danger">@Model.MontoTotal.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Registrado por:</span>
                        <span>@Model.UserId</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Fecha registro:</span>
                        <span>@DateTime.Now.ToString("g")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h5 class="fw-bold mb-3">Detalle de Gastos</h5>
    <div class="table-responsive">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Tipo de Gasto</th>
                    <th class="text-end">Monto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detalle in Model.Detalles)
                {
                    <tr>
                        <td>@detalle.TipoGasto?.Nombre</td>
                        <td class="text-end">@detalle.Monto.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>